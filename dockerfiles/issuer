# Compile
FROM docker.sunet.se/dc4eu/gobuild:latest AS builder

COPY . .

RUN make swagger
RUN make proto

RUN --mount=type=cache,target=/root/.cache/go-build GOOS=linux GOARCH=amd64 go build -v -o bin/vc_issuer -ldflags "-w -s --extldflags '-static'" ./cmd/issuer/main.go

# Deploy
FROM debian:bookworm-slim

WORKDIR /

RUN apt-get update && apt-get install -y curl procps iputils-ping less
RUN rm -rf /var/lib/apt/lists/*

COPY --from=builder /go/src/app/bin/vc_issuer /vc_issuer
COPY --from=builder /go/src/app/docs /docs

EXPOSE 8080

CMD [ "./vc_issuer" ]